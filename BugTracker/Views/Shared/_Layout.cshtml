<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - BugHero</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")

    <style>
        .fader {
            -moz-transition: opacity 4s linear;
            -o-transition: opacity 4s linear;
            -webkit-transition: opacity 4s linear;
            transition: opacity 4s linear;
        }
        .fader.fadedOut {
            opacity: 0;
        }
        #alertSuccess {
            position: absolute;
            width: 300px;
            right: 0;
            text-align: center;
        }
        .relative {
            position: relative;
        }
    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("BugHero", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content relative">
        @if (TempData["notice"] != null)
        {
            <div id="alertSuccess" class="alert alert-success fader">@TempData["notice"]</div>
        }
        
        @if (TempData["error"] != null)
        {
           <div class="alert alert-danger fader">@TempData["error"]</div> 
        }
        
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - BugHero</p>
        </footer>
    </div>





    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <script>
        $(function () {
            $("#alertSuccess").addClass("fadedOut");
        })
    </script>
</body>
</html>
