@model IEnumerable<BugTracker.Models.RolesViewModel>

@{
    ViewBag.Title = "ListRoles";
}

<h2>ListRoles</h2>

<p>
    @Html.ActionLink("Create New Role", "CreateRole")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.RoleName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RoleName)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditRole", new { id = item.RoleId }) |
                @Html.ActionLink("Delete", "DeleteRole", new { id = item.RoleId })
            </td>
        </tr>
    }

</table>
