@model IEnumerable<BugTracker.Models.ProjectViewModel>

@{
    ViewBag.Title = "Projects";
}
<h3 class="content-title"><u>Projects</u></h3>
<div class="panel panel-default">
    <div class="panel-heading">
        <div>
            <a class="btn btn-success btn-sm" href="@Url.Action("New")">
                <i class="glyphicon glyphicon-plus"></i>
            </a>
        </div>
    </div>

    <table class="table table-striped table-bordered table-hover projects-table">
        <tr>
            <th>
                Role
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                # Tickets
            </th>
            <th>
                # Members
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.ProjectMemberRole
                </td>
                <td>
                    <a href="@Url.Action("Show", new { id = item.ID })">@item.Name</a>
                </td>
                <td>
                    @Html.ActionLink(@item.NumberTickets, "Index", "Tickets", new { projectId = item.ID }, null)
                </td>
                <td>
                    @item.NumberMembers
                </td>
            </tr>
        }
    </table>
</div>