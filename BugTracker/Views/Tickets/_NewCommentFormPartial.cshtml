@model BugTracker.Models.NewTicketCommentViewModel

@using (Html.BeginForm("Create", "TicketComments", new { accountUsername = ViewBag.Username, projectId = ViewBag.ProjectId, ticketId = ViewBag.TicketId }, FormMethod.Post, null))
{
    @Html.AntiForgeryToken()
    <p>
        <strong>
            @Html.ValidationMessageFor(m => m.Comment, "", new { @class = "text-danger" })
        </strong>
    </p>
    
    
    <div class="share-widget clearfix">
        @Html.TextAreaFor(m => m.Comment,
                                            htmlAttributes: new
                                            {
                                                @class = "form-control share-widget-textarea",
                                                rows = "3",
                                                placeholder = "Enlighten us with your wisdom!",
                                                tabindex = "1"
                                            })
        

        <div class="share-widget-actions">
            <div class="pull-right">
                <input type="submit" value="Post" class="btn btn-primary btn-sm" />
            </div>
        </div> <!-- /.share-widget-actions -->
        
    </div> <!-- /.share-widget -->
}
